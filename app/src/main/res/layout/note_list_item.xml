<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="note" type="com.github.ibaykoc.Note"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="?selectableItemBackground"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/noteListItemMore"
                android:src="@drawable/ic_more_vert"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/noteListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/noteListItemTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Title"
                android:layout_marginStart="16dp"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@{note.title}"
                android:layout_width="0dp"
                app:layout_constraintEnd_toStartOf="@id/noteListItemMore"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/noteListItemNote"
                app:layout_constraintTop_toBottomOf="@id/noteListItemTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                tools:text="Note"
                android:layout_marginStart="24dp"
                android:text="@{note.note}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <View
                app:layout_constraintTop_toBottomOf="@id/noteListItemNote"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>